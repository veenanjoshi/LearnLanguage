<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.learn.lang.MainActivity"
    android:orientation="vertical">

    <TextView
        style="@style/CategoryStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/category_height"
        android:text="@string/category_numbers"
        android:id="@+id/category_numbers"
        android:background="@color/category_numbers"/>

    <TextView
        style="@style/CategoryStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/category_height"
        android:text="@string/category_family_members"
        android:id="@+id/category_family_members"
        android:background="@color/category_family"/>

    <TextView
        style="@style/CategoryStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/category_height"
        android:text="@string/category_colors"
        android:id="@+id/category_colors"
        android:background="@color/category_colors"/>

    <TextView
        style="@style/CategoryStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/category_height"
        android:text="@string/category_phrases"
        android:id="@+id/category_phrases"
        android:background="@color/category_phrases"/>

</LinearLayout>
